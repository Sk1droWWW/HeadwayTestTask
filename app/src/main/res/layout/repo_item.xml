<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.headwayTestTask.network.model.GitHubSearchItemModel" />

        <variable
            name="repoItemClick"
            type="com.example.headwayTestTask.ui.adapter.GitHubSearchAdapter.GitHubSearchItemClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:onClick="@{() -> repoItemClick.onGitHubSearchItemClicked(item)}">

        <TextView
            android:id="@+id/repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="Repo Name" />

        <TextView
            android:id="@+id/repo_description"
            android:text="@{item.description}"
            app:flow_horizontalBias="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Repo Description"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/repo_stargazers_count"
                android:text="@{item.stargazers_count}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12.3k"/>
            <TextView
                android:id="@+id/repo_language"
                android:text="@{item.language}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="Language"/>
            <TextView
                android:id="@+id/repo_last_update"
                android:maxLength="10"
                android:text="@{item.updatedAt}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="Updated 2days ago"/>
        </LinearLayout>
    </LinearLayout>
</layout>